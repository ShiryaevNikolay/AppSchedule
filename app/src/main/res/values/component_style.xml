<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavViewLightStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="itemIconTint">?android:attr/textColorPrimary</item>
        <item name="itemTextColor">?android:attr/textColorSecondary</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemRippleColor">@color/blue_gray_200</item>
    </style>

    <style name="ButtonLightStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue_gray_700</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/blue_gray_200</item>
    </style>

    <style name="ButtonNegativeStyle" parent="ButtonLightStyle">
        <item name="android:textColor">@color/red_900</item>
        <item name="colorAccent">@color/red_900</item>
        <item name="rippleColor">@color/red_200</item>
    </style>

    <style name="ToolbarLightStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="titleTextColor">@color/light_blue_500</item>
    </style>

    <style name="TabLayoutLightStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="textAllCaps">true</item>
        <item name="tabRippleColor">@color/blue_gray_200</item>
        <item name="tabIndicatorColor">@color/blue_gray_700</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabSelectedTextColor">@color/blue_gray_800</item>
    </style>

    <style name="TimePickerDialogLightStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">?android:attr/windowBackground</item>
        <item name="android:headerBackground">@color/blue_gray_700</item>
        <item name="colorAccent">@color/blue_gray_700</item>
        <item name="materialButtonStyle">@style/ButtonLightStyle</item>
        <item name="buttonStyle">@style/ButtonLightStyle</item>
        <item name="alertDialogButtonGroupStyle">@style/ButtonLightStyle</item>
    </style>
    
    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
    </style>

    <style name="CustomTextAppearanceDateLight" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="CustomTextAppearanceDateDark" parent="CustomTextAppearanceDateLight">
        <item name="android:textColor">@color/mcv_text_date_dark</item>
    </style>
    
    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/selector_switch_thumb</item>
        <item name="trackTint">@color/selector_switch_track</item>
    </style>
</resources>