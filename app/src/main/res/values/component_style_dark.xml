<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavViewDarkStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="itemIconTint">?android:attr/textColorPrimary</item>
        <item name="itemTextColor">?android:attr/textColorSecondary</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemRippleColor">@color/gray_800</item>
    </style>

    <style name="ButtonDarkStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue_gray_100</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/gray_700</item>
        <item name="iconTint">@color/blue_gray_100</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="ToolbarDarkStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="titleTextColor">@color/light_blue_500</item>
    </style>

    <style name="TabLayoutDarkStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/gray_900</item>
        <item name="tabTextColor">?android:attr/textColorSecondary</item>
        <item name="tabSelectedTextColor">?android:attr/colorAccent</item>
        <item name="textAllCaps">true</item>
        <item name="tabRippleColor">@color/gray_700</item>
        <item name="tabIndicatorColor">@color/blue_gray_400</item>
        <item name="tabIndicatorGravity">bottom</item>
    </style>

    <style name="TimePickerDialogDarkStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">?android:attr/windowBackground</item>
        <item name="android:headerBackground">@color/blue_gray_700</item>
        <item name="colorAccent">?android:attr/colorAccent</item>
    </style>

    <style name="CustomTextAppearanceDateDark" parent="CustomTextAppearanceDateLight">
        <item name="android:textColor">@color/mcv_text_date_dark</item>
    </style>

    <style name="CardDarkStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_black</item>
    </style>

    <style name="FabDarkStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?android:attr/colorAccent</item>
        <item name="tint">?android:attr/windowBackground</item>
    </style>

    <style name="AlertDialogDarkStyle" parent="Theme.AppCompat.Dialog">
        <item name="buttonBarButtonStyle">@style/ButtonDarkStyle</item>
        <item name="android:windowBackground">@drawable/dialog_style</item>
    </style>
</resources>