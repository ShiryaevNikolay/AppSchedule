<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="ThemeLight"/>
    <style name="AppTheme.Dark" parent="ThemeDark"/>

    <style name="ThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/gray_500</item>
        <item name="android:navigationBarColor">@color/gray_500</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/blue_gray_700</item>
        <item name="bottomNavigationStyle">@style/BottomNavViewLightStyle</item>
        <item name="toolbarStyle">@style/ToolbarLightStyle</item>
        <item name="tabStyle">@style/TabLayoutLightStyle</item>
        <item name="materialButtonStyle">@style/ButtonLightStyle</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="ThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/gray_900</item>
        <item name="android:statusBarColor">@color/gray_900</item>
        <item name="android:navigationBarColor">@color/gray_900</item>
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorPrimaryDark">@color/gray_900</item>
        <item name="colorAccent">@color/blue_gray_100</item>
        <item name="bottomNavigationStyle">@style/BottomNavViewDarkStyle</item>
        <item name="toolbarStyle">@style/ToolbarDarkStyle</item>
        <item name="tabStyle">@style/TabLayoutDarkStyle</item>
        <item name="materialButtonStyle">@style/ButtonDarkStyle</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
        <item name="fontFamily">@font/rubik</item>
    </style>
</resources>
